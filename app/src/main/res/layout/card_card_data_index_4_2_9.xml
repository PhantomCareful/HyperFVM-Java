<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 左侧文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_card_data_index_4_2_9_0"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_card_data_index_4_2_9_1"
            android:textSize="11sp"
            android:textColor="?attr/colorOnPrimaryContainer" />
    </LinearLayout>

    <!-- 右侧卡片 -->
    <ImageView
        android:id="@+id/card_data_index_4_2_9_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_data_index_4_2_9_0"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/card_data_index_4_2_9_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_data_index_4_2_9_1"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/card_data_index_4_2_9_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_data_index_4_2_9_2"
        tools:ignore="ContentDescription" />
</LinearLayout>