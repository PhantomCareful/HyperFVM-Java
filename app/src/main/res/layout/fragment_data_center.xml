<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:id="@+id/ScrollViewDataStationCardDataIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/DataCenter_Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="120dp"
                android:paddingBottom="150dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginBottom="5dp"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/title_dashboard"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center_vertical"
                        android:layout_gravity="bottom"/>

                    <ImageView
                        android:id="@+id/ButtonRefreshDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_refresh"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <include layout="@layout/card_last_day_of_month"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_double_explosion_rate_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="?attr/CardViewMarginBottom"
                    app:cardBackgroundColor="?attr/ImportantCardViewBackground"
                    app:cardCornerRadius="20dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="3"
                        android:columnCount="5">

                        <LinearLayout
                            android:id="@+id/dashboard_DoubleExplosionRate_Container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_DoubleExplosionRate_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_double_explosion_rate"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_DoubleExplosionRate_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_DoubleExplosionRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 垂直线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_marginTop="5dp"
                            android:background="?attr/colorSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_MeishiWechat_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_meishi_wechat"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_MeishiWechat_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_MeishiWechat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 垂直线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_marginTop="5dp"
                            android:background="?attr/colorSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_BilibiliFVM_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_bilibili_fvm"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_BilibiliFVM_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_BilibiliFVM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 水平线段 -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="5dp"
                            android:background="?attr/colorSurface"/>

                        <!-- 水平线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:background="?attr/colorSurface"/>

                        <!-- 水平线段 -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_columnWeight="1"
                            android:background="?attr/colorSurface"/>

                        <!-- 水平线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:background="?attr/colorSurface"/>

                        <!-- 水平线段 -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="5dp"
                            android:background="?attr/colorSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_Everyday_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_everyday"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_Everyday_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_Everyday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 垂直线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_marginBottom="5dp"
                            android:background="?attr/colorSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_FertilizationTask_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_fertilization_task"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_FertilizationTask_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_FertilizationTask"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 垂直线段 -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_marginBottom="5dp"
                            android:background="?attr/colorSurface"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/dashboard_NewYear_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="@string/title_dashboard_new_year"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_NewYear_Emoji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/dashboard_NewYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:textColor="?attr/TextViewColorOnImportantCardView"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </LinearLayout>

                    </GridLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_data_center_about_data"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface"/>

                <include layout="@layout/card_card_data_index"/>
                <include layout="@layout/card_card_data_auxiliary_list"/>
                <include layout="@layout/card_data_images_index"/>
                <include layout="@layout/card_tiramisu_image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_tools_made_by_xiaye"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- 左列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_tiramisu"/>
                        <include layout="@layout/card_faa"/>
                        <include layout="@layout/card_icu"/>
                        <include layout="@layout/card_card_calculator"/>

                    </LinearLayout>

                    <!-- 右列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_molu"/>
                        <include layout="@layout/card_strategy"/>
                        <include layout="@layout/card_strategy_world_boss"/>
                        <include layout="@layout/card_gem_calculator"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_tools_made_by_phantom_careful"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface"/>

                <include layout="@layout/card_today_lucky"/>
                <include layout="@layout/card_prestige_calculator"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"/>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    </eightbitlab.com.blurview.BlurTarget>

</androidx.constraintlayout.widget.ConstraintLayout>