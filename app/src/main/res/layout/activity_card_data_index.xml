<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/data_images_index_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/Img_CardDataButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/card_data_button_img"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/card_data_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/title_card_data_index_1_1"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- 左侧文字 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_1_0"
                                    android:textSize="20sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_1_1"
                                    android:textSize="11sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"/>

                            </LinearLayout>

                            <!-- 右侧卡片 -->
                            <ImageView
                                android:id="@+id/card_data_index_1_1_1_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_1_0"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_1_1"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_1_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_1_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- 左侧文字 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_2_0"
                                    android:textSize="20sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_2_1"
                                    android:textSize="11sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"/>

                            </LinearLayout>

                            <!-- 右侧卡片 -->
                            <ImageView
                                android:id="@+id/card_data_index_1_1_2_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_2_0"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_2_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_2_1"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_2_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_2_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- 左侧文字 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_3_0"
                                    android:textSize="20sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_3_1"
                                    android:textSize="11sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"/>

                            </LinearLayout>

                            <!-- 右侧卡片 -->
                            <ImageView
                                android:id="@+id/card_data_index_1_1_3_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_3_0"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_3_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_3_1"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_3_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_3_2"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- 左侧文字 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_4_0"
                                    android:textSize="20sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_card_data_index_1_1_4_1"
                                    android:textSize="11sp"
                                    android:textColor="?attr/colorOnPrimaryContainer"/>

                            </LinearLayout>

                            <!-- 右侧卡片 -->
                            <ImageView
                                android:id="@+id/card_data_index_1_1_4_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_4_0"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_4_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_4_1"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_4_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_4_2"
                                tools:ignore="ContentDescription" />
                            <ImageView
                                android:id="@+id/card_data_index_1_1_4_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_data_index_1_1_4_3"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"/>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    </eightbitlab.com.blurview.BlurTarget>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurViewTopAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/blur_overlay_color"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/Top_AppBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:titleTextColor="?attr/colorOnSurface"
                app:titleTextAppearance="@style/ToolBarTitleStyle" />

        </com.google.android.material.appbar.AppBarLayout>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>