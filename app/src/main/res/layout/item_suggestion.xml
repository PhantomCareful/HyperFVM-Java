<?xml version="1.0" encoding="utf-8"?>
<!--这是防御卡数据按名查询的搜索结果预览的样式文件-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/suggestion_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="?attr/CardViewMarginBottom"
    app:cardBackgroundColor="?attr/GeneralCardViewBackground"
    app:cardCornerRadius="20dp"
    app:strokeWidth="0dp">

    <TextView
        android:id="@+id/suggestion_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_input_padding"
        android:textSize="20sp"
        android:textColor="?attr/TextViewColorOnGeneralCardView"
        android:ellipsize="end"
        android:singleLine="true"
        android:background="?attr/selectableItemBackground"/>

</androidx.cardview.widget.CardView>
