<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 左侧文字 -->
        <TextView
            android:id="@+id/card_data_index_corresponding_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_card_data_index_1_1_4_0"
            android:textColor="?attr/TextViewColorOnGeneralCardView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_data_index_corresponding_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_card_data_corresponding_info_demo"
            android:textColor="?attr/TextViewColorOnGeneralCardView"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- 右侧卡片 -->
    <ImageView
        android:id="@+id/card_data_index_corresponding_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_data_index_1_1_4_0"
        tools:ignore="ContentDescription" />
</LinearLayout>