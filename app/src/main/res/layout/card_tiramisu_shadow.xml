<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tiramisu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/Img_ToolsTiramisu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/data_center_image_tiramisu"
            android:scaleType="fitCenter"
            android:layout_gravity="end|bottom"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="false"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_ToolsTiramisu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_tools_tiramisu"
                android:textSize="15sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/description_ToolsTiramisu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tools_tiramisu"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimaryContainer"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</merge>