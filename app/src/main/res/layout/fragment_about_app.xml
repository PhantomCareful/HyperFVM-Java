<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
        android:id="@+id/ScrollViewAboutApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/about_app_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:paddingBottom="120dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/about_app_icon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/app_icon_in"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label_check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_check_update"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/title_about_app_developer_name"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimary"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/about_app_developer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3">

                        <ImageView
                            android:id="@+id/Image_View_Phantom_Careful"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitStart"
                            android:src="@drawable/phantom_careful"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_about_app_developer_name"
                            android:textSize="25sp"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center_vertical" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnPrimary"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="end|center_vertical"
                            tools:ignore="ContentDescription" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/about_app_label_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/label_thanks"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/about_app_thanks_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardElevation="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_app_thanks_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/about_app_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/many_n"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/about_app_label_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/label_more"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/about_app_more_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardElevation="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第一个选项：GitHub -->
                    <LinearLayout
                        android:id="@+id/about_app_github_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <!-- 左侧文字 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_about_app_github"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer"/>

                        <!-- 右侧箭头 -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_github"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第二个选项：123盘更新 -->
                    <LinearLayout
                        android:id="@+id/about_app_get_update_123pan_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_about_app_get_update_123pan"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cloud_download"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第三个选项：更新日志 -->
                    <LinearLayout
                        android:id="@+id/about_app_see_update_log_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_about_app_see_update_log_history"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

</LinearLayout>