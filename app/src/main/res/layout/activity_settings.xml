<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/title_settings_permission"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/permission_notification_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_settings_permission_notification"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <TextView
                            android:id="@+id/permission_current_state_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/title_settings_theme"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_isDynamicColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_is_dynamic_color"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <LinearLayout
                            android:id="@+id/theme_selector_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/label_settings_option_themed_color"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <TextView
                                android:id="@+id/theme_current_selection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:text=""
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dark_mode_selector_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/label_settings_option_dark_mode"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <TextView
                                android:id="@+id/dark_mode_current_selection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/title_settings_toast"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_isVisible_CardDataIndex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_card_data_index"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_isVisible_CardDataAuxiliaryList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_card_data_auxiliary_list"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_isVisible_DataImageViewer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_data_image_viewer"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/title_settings_auto_task"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_AutoTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_auto_task"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_settings_auto_task_description"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/Switch_AutoTask_Enhanced"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="@string/label_settings_switch_auto_task_enhanced"
                            android:textSize="20sp"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_settings_switch_auto_task_enhanced_description"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    </eightbitlab.com.blurview.BlurTarget>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurViewTopAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/blur_overlay_color"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/Top_AppBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:titleTextColor="?attr/colorOnSurface"
                app:titleTextAppearance="@style/ToolBarTitleStyle" />

        </com.google.android.material.appbar.AppBarLayout>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>