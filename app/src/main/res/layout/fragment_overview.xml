<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/using_instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/using_instruction_top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="?attr/colorPrimary"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/using_instruction_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/using_instruction1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/using_instruction1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/using_instruction2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/using_instruction2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/using_instruction3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/using_instruction3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/using_instruction4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="10dp">

                <TextView
                    android:id="@+id/using_instruction4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/using_instruction_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="@string/copyright"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/overview_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/many_n"
                android:textSize="40sp" />

        </LinearLayout>

    </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

</LinearLayout>