<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HyperFVMJava" parent="Theme.Material3.DynamicColors.DayNight">
        <!--SplashScreen背景颜色-->
        <item name="android:windowSplashScreenBackground">@color/splash_color</item>
        <!--SplashScreen图标-->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!--SplashScreen持续时间-->
        <item name="android:windowSplashScreenAnimationDuration">500</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTitleStyle" parent="Base.Theme.HyperFVMJava">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CardDataAuxiliaryListStyle" parent="Base.Theme.HyperFVMJava">
        <item name="colorOnPrimaryContainer">?attr/colorOnPrimary</item>
    </style>

    <style name="NavItemTextStyle" parent="Base.Theme.HyperFVMJava">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 自定义CardView圆角样式：仅左上+右上圆角，左下+右下直角 -->
    <style name="CustomCardCornerStyle" parent="Base.Theme.HyperFVMJava">
        <!-- 圆角类型：rounded（圆角）/cut（切角） -->
        <item name="cornerFamily">rounded</item>
        <!-- 分别设置四个角的圆角大小（单位dp） -->
        <item name="cornerSizeTopLeft">40dp</item>    <!-- 左上圆角 -->
        <item name="cornerSizeTopRight">40dp</item>   <!-- 右上圆角 -->
        <item name="cornerSizeBottomLeft">0dp</item>  <!-- 左下直角 -->
        <item name="cornerSizeBottomRight">0dp</item> <!-- 右下直角 -->
    </style>

    <style name="Theme.HyperFVMJava" parent="Base.Theme.HyperFVMJava" />

</resources>