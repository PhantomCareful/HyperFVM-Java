<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HyperFVMJava" parent="Theme.Material3.DynamicColors.DayNight">
        <!--SplashScreen背景颜色-->
        <item name="android:windowSplashScreenBackground">@color/splash_color</item>
        <!--SplashScreen图标-->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!--SplashScreen持续时间-->
        <item name="android:windowSplashScreenAnimationDuration">500</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTitleStyle" parent="Base.Theme.HyperFVMJava">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NavItemTextStyle" parent="Base.Theme.HyperFVMJava">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.HyperFVMJava" parent="Base.Theme.HyperFVMJava" />

</resources>