<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
        android:id="@+id/ScrollViewAboutApp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/about_app_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="120dp"
            android:paddingBottom="150dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/about_app_icon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/app_icon_in"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/label_check_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_check_update"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:text="@string/title_about_app_developer_name"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimary"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/about_app_developer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/Image_View_Phantom_Careful"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/phantom_careful"
                        android:layout_gravity="start|center_vertical"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_about_app_developer_name_1"
                            android:textSize="25sp"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_about_app_developer_name_2"
                            android:textSize="15sp"
                            android:textColor="?attr/colorOnPrimary"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_chevron_right"
                        android:layout_gravity="end|center_vertical"
                        app:tint="?attr/colorOnPrimary"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/about_app_label_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:text="@string/label_thanks"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/about_app_thanks_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardElevation="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_app_thanks_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/about_app_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/many_n"
                android:textSize="40sp"/>

        </LinearLayout>

    </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="120dp"
            android:paddingBottom="150dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/about_app_label_some_necessary_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:text="@string/label_some_necessary_things"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/about_app_some_necessary_things_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第1个选项：使用说明 -->
                    <LinearLayout
                        android:id="@+id/about_app_using_instruction_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_using_instruction_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_using_instruction_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <!-- 右侧箭头 -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第2个选项：设置 -->
                    <LinearLayout
                        android:id="@+id/about_app_settings_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_settings_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_settings_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <!-- 右侧箭头 -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/about_app_label_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:text="@string/label_more"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/about_app_more_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardBackgroundColor="?attr/colorPrimaryContainer"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第1个选项：GitHub -->
                    <LinearLayout
                        android:id="@+id/about_app_github_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_github_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_github_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <!-- 右侧箭头 -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_github"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第2个选项：123盘更新 -->
                    <LinearLayout
                        android:id="@+id/about_app_get_update_123pan_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_get_update_123pan_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_get_update_123pan_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cloud_download"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第3个选项：哔哩哔哩 -->
                    <LinearLayout
                        android:id="@+id/about_app_bilibili_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_bilibili_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_bilibili_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bilibili"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第4个选项：腾讯频道 -->
                    <LinearLayout
                        android:id="@+id/about_app_tencent_channel_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_tencent_channel_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_tencent_channel_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_qq"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <!-- 第5个选项：更新日志 -->
                    <LinearLayout
                        android:id="@+id/about_app_see_update_log_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 左侧文字 -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_see_update_log_history_1"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_about_app_see_update_log_history_2"
                                android:textSize="15sp"
                                android:textColor="?attr/colorOnPrimaryContainer"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnPrimaryContainer"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

</LinearLayout>