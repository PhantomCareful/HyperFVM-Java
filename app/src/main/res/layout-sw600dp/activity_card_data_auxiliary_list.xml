<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:id="@+id/CardDataAuxiliaryList_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="120dp"
                android:paddingBottom="20dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_1"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_1"
                        layout="@layout/card_card_data_auxiliary_list_1"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_1"
                        layout="@layout/card_card_data_auxiliary_list_content_1"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_2"
                        layout="@layout/card_card_data_auxiliary_list_2"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_2"
                        layout="@layout/card_card_data_auxiliary_list_content_2"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_3"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_3"
                        layout="@layout/card_card_data_auxiliary_list_3"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_3"
                        layout="@layout/card_card_data_auxiliary_list_content_3"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_4"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_4"
                        layout="@layout/card_card_data_auxiliary_list_4"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_4"
                        layout="@layout/card_card_data_auxiliary_list_content_4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_5"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_5"
                        layout="@layout/card_card_data_auxiliary_list_5"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_5"
                        layout="@layout/card_card_data_auxiliary_list_content_5"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_6"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_6"
                        layout="@layout/card_card_data_auxiliary_list_6"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_6"
                        layout="@layout/card_card_data_auxiliary_list_content_6"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_7"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_7"
                        layout="@layout/card_card_data_auxiliary_list_7"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_7"
                        layout="@layout/card_card_data_auxiliary_list_content_7"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_8"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_8"
                        layout="@layout/card_card_data_auxiliary_list_8"/>

                    <TextView
                        android:id="@+id/title_card_data_auxiliary_list_content_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/title_card_data_auxiliary_list_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"/>

                    <include
                        android:id="@+id/card_card_data_auxiliary_list_content_8"
                        layout="@layout/card_card_data_auxiliary_list_content_8"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/copyright"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    </eightbitlab.com.blurview.BlurTarget>

    <!-- 状态栏渐变遮罩层 -->
    <View
        android:id="@+id/status_bar_gradient"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/status_bar_gradient_general"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/FloatButton_Back_Container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/bottom_navigation_view_stroke_color"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurViewButtonBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="@color/blur_overlay_color">

            <ImageButton
                android:id="@+id/FloatButton_Back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_arrow_left"
                android:stateListAnimator="@null"
                android:clickable="false"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:rippleColor="@android:color/transparent"
                tools:ignore="ContentDescription" />

        </eightbitlab.com.blurview.BlurView>

    </com.google.android.material.card.MaterialCardView>

    <!-- 顶栏 -->
    <TextView
        android:id="@+id/Top_AppBar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:text="@string/top_bar_data_center_card_data_auxiliary_list"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/FloatButton_Back_Container"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 底部目录按钮 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/FloatButton_CardDataAuxiliaryListIndex_Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:strokeWidth="2dp"
        app:strokeColor="@color/bottom_navigation_view_stroke_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurViewButtonIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            app:blurOverlayColor="@color/blur_overlay_color"
            tools:ignore="MissingConstraints">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/FloatButton_CardDataAuxiliaryListIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/float_button_data_center_card_data_index"
                android:textSize="25sp"
                android:backgroundTint="@android:color/transparent"
                android:stateListAnimator="@null"
                android:clickable="false"
                app:icon="@drawable/ic_index"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:rippleColor="@android:color/transparent" />

        </eightbitlab.com.blurview.BlurView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>