<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/dashboard_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="80dp">

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:paddingBottom="20dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:paddingBottom="5dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="6"
                        android:layout_marginStart="25dp"
                        android:text="@string/label_tools_dashboard"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <Button
                        android:id="@+id/ButtonRefreshDashboard"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="4"
                        android:layout_marginEnd="10dp"
                        android:text="@string/label_tools_button_refresh_dashboard"
                        android:textSize="20sp"
                        app:cornerRadius="20dp"
                        android:elevation="10dp"/>

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- 左列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_last_day_of_month"/>
                        <include layout="@layout/card_double_explosion_rate"/>
                        <include layout="@layout/card_everyday"/>
                        <include layout="@layout/card_bilibili_fvm"/>

                    </LinearLayout>

                    <!-- 右列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_meishi_wechat"/>
                        <include layout="@layout/card_fertilization_task"/>
                        <include layout="@layout/card_new_year"/>
                        <include layout="@layout/card_tiramisu_image"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/bottom_copyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

        <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:paddingBottom="20dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_tools_made_by_xiaye"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- 左列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_tiramisu"/>
                        <include layout="@layout/card_faa"/>
                        <include layout="@layout/card_icu"/>
                        <include layout="@layout/card_card_calculator"/>

                    </LinearLayout>

                    <!-- 右列卡片 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="RtlSymmetry"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <include layout="@layout/card_molu"/>
                        <include layout="@layout/card_strategy"/>
                        <include layout="@layout/card_gem_calculator"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/label_tools_made_by_phantom_careful"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSurface"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <include layout="@layout/card_today_lucky"/>
                    <include layout="@layout/card_prestige_calculator"/>

                </LinearLayout>

            </LinearLayout>

        </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>