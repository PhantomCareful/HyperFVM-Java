<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/Tools_Pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints,UselessParent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="none"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:id="@+id/MeishiWechatContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="120dp"
                    android:paddingBottom="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:id="@+id/TitleMeishiWechatSavedAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/label_tools_meishi_wechat_account_saved"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <!--账号列表容器，用于动态添加卡片-->
                    <LinearLayout
                        android:id="@+id/LinearLayout_AccountList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </LinearLayout>

            </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

            <com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="none"
                tools:ignore="MissingConstraints"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="120dp"
                    android:paddingBottom="120dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <TextView
                        android:id="@+id/TitleMeishiWechatInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/title_tools_meishi_wechat_rules"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/MeishiWechatInstructionsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="?attr/CardViewMarginBottom"
                        app:cardBackgroundColor="?attr/GeneralCardViewBackground"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TextMeishiWechatInstructions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text=""
                                android:textSize="20sp"
                                android:textColor="?attr/TextViewColorOnGeneralCardView"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/TitleMeishiWechatGiftContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/title_tools_meishi_wechat_gift"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/MeishiWechatGiftContentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="?attr/CardViewMarginBottom"
                        app:cardBackgroundColor="?attr/GeneralCardViewBackground"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_2h_double_item"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_crystal"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_spice_2"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_spice_3"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_spice_4"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_four_leaf_clover_1"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_four_leaf_clover_2"
                                        tools:ignore="ContentDescription" />
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/item_four_leaf_clover_3"
                                        tools:ignore="ContentDescription" />

                                </LinearLayout>

                            </HorizontalScrollView>

                            <TextView
                                android:id="@+id/TextMeishiWechatGiftContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text=""
                                android:textSize="20sp"
                                android:textColor="?attr/TextViewColorOnGeneralCardView"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </com.careful.HyperFVM.utils.ForDesign.Animation.SpringBackScrollView>

        </LinearLayout>

    </eightbitlab.com.blurview.BlurTarget>

    <!-- 状态栏渐变遮罩层 -->
    <View
        android:id="@+id/status_bar_gradient"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/status_bar_gradient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 顶栏：移到中间内容之后（层级更高），设透明背景 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/Top_AppBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleTextAppearance="@style/ToolBarTitleStyle" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/FloatButton_MeishiWechat_Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:strokeWidth="2dp"
        app:strokeColor="@color/bottom_navigation_view_stroke_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            app:blurOverlayColor="@color/blur_overlay_color"
            tools:ignore="MissingConstraints">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/FloatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tools_meishi_wechat_add_url"
                android:textSize="20sp"
                android:backgroundTint="@android:color/transparent"
                android:stateListAnimator="@null"
                android:clickable="false"
                app:icon="@drawable/ic_plus"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:rippleColor="@android:color/transparent" />

        </eightbitlab.com.blurview.BlurView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>